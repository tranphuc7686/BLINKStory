<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.blinkstory">

    <!-- Xin quyền kết nối internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SET_WALLPAPER" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.example.blinkstory.ViewVideoElementActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_video_element"
            android:theme="@style/AppTheme.SlidrActivityTheme"></activity>
        <activity
            android:name="com.example.blinkstory.ViewImageElementActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_view_element"
            android:theme="@style/AppTheme.SlidrActivityTheme" />
        <activity
            android:name=".ElementActivity"
            android:label="@string/title_activity_element"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.example.blinkstory.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>